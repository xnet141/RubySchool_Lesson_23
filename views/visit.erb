<h1>Записаться</h1>


<form action='/visit' method='POST' role='form'>
  
  <div class="form-group">
    <label>Ваше имя:</label>
    <input id='bbb' name='username' type="text" class="form-control"  placeholder='Ваше имя'>
  </div>

  <div class="form-group">
    <label>Ваш телефон:</label>
    <input name='phone' type="text" class="form-control ccc"  placeholder='Ваш телефон'>
  </div>

  <div class="form-group">
    <label>Когда вас ждать?</label>
    <input id='aaa' name='datetime' type="text" class="form-control"  placeholder='Введите дату и время'>
  </div>

  <div class="form-group">
    <label>Ваш парикмахер:</label>
  <select name="barber" id="barber-select" class="form-control ccc">  #class="form-select"
    <option value="">--Выберите парикмахера--</option>
    <option value="Walter White">Walter White</option>
    <option value="Jessie!!! Pinkman ">Jessie Pinkman</option>
    <option value="Gus Fring">Gus Fring</option>
  </select>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>
</form>

<script type="text/javascript">
  $('#aaa').css('background-color','yellow')
  $('#bbb').css('background-color','red')
  $('.ccc').css('background-color','blue')
</script>
